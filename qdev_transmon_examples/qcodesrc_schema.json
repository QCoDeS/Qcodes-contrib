{
    "type": "object",
    "description": "schema for a qcodes config file",
    "properties": {
        "gui": {
            "type": "object",
            "description": "controls gui of qcodes",
            "properties": {
                "plotlib": {
                    "description": "Plotting library",
                    "type": "string",
                    "default": "matplotlib",
                    "enum": [
                        "QT",
                        "matplotlib"
                    ]
                },
                "notebook": {
                    "description": "Use notebook frontend",
                    "type": "boolean",
                    "default": true
                }
            },
            "required": [
                "notebook",
                "plotlib"
            ]
        },
        "user": {
            "type": "object",
            "description": "controls user settings of qcodes",
            "properties": {
                "data_format": {
                    "type": "string",
                    "description": "Format of data file names",
                    "default": "{counter}"
                },
                "analysis_location": {
                    "type": "string",
                    "description": "Location of analysis plots and data",
                    "default": "A:/TransmonExperiments/GoogleDrive/T2acquisition/Data/"
                },
                "pulse_location": {
                    "type": "string",
                    "description": "Location of AWG files",
                    "default": "A:/TransmonExperiments/GoogleDrive/T2acquisition/Data/"
                },
                "data_location": {
                    "type": "string",
                    "description": "Location of dat",
                    "default": "A:/TransmonExperiments/GoogleDrive/T2acquisition/Data/"
                },
                "log_location": {
                    "type": "string",
                    "description": "Location of log files",
                    "default": "A:/TransmonExperiments/GoogleDrive/T2acquisition/Data/"
                }
            }
        },
        "core": {
            "description": "controls core settings of qcodes",
            "type": "object",
            "properties": {
                "legacy_mp": {
                    "type": "boolean",
                    "description": "control legacy buggy multiprocess",
                    "default": false
                },
                "default_fmt": {
                    "type": "string",
                    "description": "default location formatter",
                    "default": "data/{date}/#{counter}_{name}_{time}"
                },
                "loglevel": {
                    "type": "string",
                    "description": "control logging  level",
                    "enum": [
                        "CRITICAL",
                        "ERROR",
                        "WARNING",
                        "INFO",
                        "DEBUG"
                    ],
                    "default": "DEBUG"
                }
            },
            "required": [
                "legacy_mp",
                "loglevel"
            ]
        }
    },
    "required": [
        "gui",
        "core",
        "user"
    ],
    "$schema": "http://json-schema.org/draft-04/schema#"
}